{
  "name": "foreign-exchange-backend",
  "version": "1.0.0",
  "description": "Sistema de Casa de Cambio Backend",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/app.js",
    "start:prod": "cd /opt/render/project && node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "deploy": "npm run migration:run && npm run seed:prod",
    "seed:prod": "NODE_ENV=production ts-node src/Scripts/InitialSeeder.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:generate": "npm run typeorm -- migration:generate -d src/DbModel/data-source.ts",
    "migration:run": "npm run typeorm -- migration:run -d src/DbModel/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/DbModel/data-source.ts",
    "seed": "ts-node src/Scripts/InitialSeeder.ts",
    "seed:dev": "NODE_ENV=development ts-node src/Scripts/InitialSeeder.ts"
  },
  "dependencies": {
    "@types/ms": "^2.1.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "typescript": "^5.8.3",
    "ts-node": "^10.9.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.0",
    "@types/pg": "^8.10.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0"
  },
  "keywords": [
    "casa-de-cambio",
    "foreign-exchange",
    "typescript",
    "typeorm",
    "postgresql"
  ],
  "author": "Tu Nombre",
  "license": "MIT"
}
